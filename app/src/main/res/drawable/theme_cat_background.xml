<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorPrimary">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="@dimen/border_4dp"
                        android:left="@dimen/border_4dp"
                        android:right="@dimen/border_4dp"
                        android:top="@dimen/border_4dp" />
                    <stroke
                        android:width="@dimen/border_4dp"
                        android:color="?attr/colorPrimary" />
                    <corners android:radius="@dimen/icon_radius" />
                    <solid android:color="@color/grey_100" />
                </shape>
            </item>
            <item android:state_selected="false">
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="@dimen/border_4dp"
                        android:left="@dimen/border_4dp"
                        android:right="@dimen/border_4dp"
                        android:top="@dimen/border_4dp" />
                    <stroke
                        android:width="@dimen/border_4dp"
                        android:color="@color/grey_200" />
                    <corners android:radius="@dimen/icon_radius" />
                    <solid android:color="@color/grey_100" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
