<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText"
    tools:showIn="@layout/appcompat_examples_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/space_16dp">

        <!-- Button -->
        <LinearLayout
            style="@style/ContainerRow"
            android:layout_marginTop="@dimen/space_minus_8dp">

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="Button" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enabled" />
            </LinearLayout>

            <Space style="@style/Space16dp" />

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="Button (Disabled)" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Disabled" />
            </LinearLayout>

        </LinearLayout>

        <!-- ToggleButton -->
        <LinearLayout style="@style/ContainerRow">

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="ToggleButton" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enabled" />
            </LinearLayout>

            <Space style="@style/Space16dp" />

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="ToggleButton (Disabled)" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Disabled" />
            </LinearLayout>

        </LinearLayout>

        <!-- Switch -->
        <LinearLayout style="@style/ContainerRow">

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="Switch" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:switchPadding="@dimen/space_4dp"
                    android:text="Enabled" />
            </LinearLayout>

            <Space style="@style/Space16dp" />

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="Switch (Disabled)" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:switchPadding="@dimen/space_4dp"
                    android:text="Disabled" />
            </LinearLayout>

        </LinearLayout>

        <!-- CheckBox -->
        <LinearLayout style="@style/ContainerRow">

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="CheckBox" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enabled" />
            </LinearLayout>

            <Space style="@style/Space16dp" />

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="CheckBox (Disabled)" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Disabled" />
            </LinearLayout>

        </LinearLayout>

        <!-- RadioButton -->
        <LinearLayout style="@style/ContainerRow">

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="RadioButton" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enabled" />
            </LinearLayout>

            <Space style="@style/Space16dp" />

            <LinearLayout style="@style/ContainerWithLabel">

                <TextView
                    style="@style/LabelText"
                    android:text="RadioButton (Disabled)" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Disabled" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>