<?xml version="1.0" encoding="utf-8"?><!-- Specific styles for app -->
<resources>

    <style name="Title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/space_8dp</item>
        <item name="android:layout_marginTop">@dimen/space_16dp</item>
    </style>

    <style name="ColorPaletteText">
        <item name="android:textSize">10sp</item>
        <item name="android:padding">@dimen/space_4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ContainerRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ContainerWithLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_8dp</item>
        <item name="android:layout_marginBottom">@dimen/space_4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Border">
        <item name="android:layout_height">@dimen/border_1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/border_grey</item>
    </style>

    <style name="Border.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/border_1dp</item>
    </style>

    <style name="Space16dp">
        <item name="android:layout_height">@dimen/space_16dp</item>
        <item name="android:layout_width">@dimen/space_16dp</item>
    </style>

    <style name="Space8dp">
        <item name="android:layout_height">@dimen/space_8dp</item>
        <item name="android:layout_width">@dimen/space_8dp</item>
    </style>

    <style name="ThemeImage">
        <item name="android:foreground">@drawable/theme_cat_foreground</item>
        <item name="android:background">@drawable/theme_cat_background</item>
        <item name="android:layout_width">@dimen/icon_56dp</item>
        <item name="android:layout_height">@dimen/icon_56dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:clickable">true</item>
        <item name="riv_corner_radius">@dimen/icon_radius</item>
    </style>

</resources>