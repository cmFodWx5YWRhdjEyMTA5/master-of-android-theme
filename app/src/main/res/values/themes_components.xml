<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Moat.Widget.Design.TabLayout" parent="Widget.Design.TabLayout">
        <item name="elevation">4dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextColor">?android:textColorTertiary</item>
    </style>

    <style name="Moat.Widget.AppCompat.ActionBar.Solid" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="Moat.Widget.MaterialComponents.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/Moat.ShapeAppearance.Shrine.MediumComponent</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="Moat.ShapeAppearance.Shrine.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <item name="disabled_alpha" format="float" type="dimen">1.0</item>

</resources>