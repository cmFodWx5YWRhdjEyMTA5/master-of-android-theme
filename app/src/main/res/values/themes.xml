<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_grey_300</item>
        <item name="colorPrimaryDark">@color/blue_grey_400</item>
        <item name="colorAccent">@color/green_A200</item>
        <item name="colorError">@color/red_500</item>
        <item name="colorSwitchThumbNormal">@color/amber_800</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textColorSecondary">@color/black_1000</item>
        <item name="android:windowBackground">@color/blue_grey_50</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="tabStyle">@style/Moat.Widget.Design.TabLayout</item>
        <item name="actionBarStyle">@style/Moat.Widget.AppCompat.ActionBar.Solid</item>
    </style>

    <style name="Moat.Widget.Design.TabLayout" parent="Widget.Design.TabLayout">
        <item name="elevation">4dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextColor">?android:textColorTertiary</item>
    </style>

    <style name="Moat.Widget.AppCompat.ActionBar.Solid" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <item name="disabled_alpha" format="float" type="dimen">1.0</item>

